    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyBZQdKp3OX3NR-i1Sj8S3JXZw0s5gp0MJc",
            authDomain: "kemo-46599.firebaseapp.com",
            projectId: "kemo-46599",
            storageBucket: "kemo-46599.firebasestorage.app",
            messagingSenderId: "897374704678",
            appId: "1:897374704678:web:1c744ef5c2808b339a02e7",
            measurementId: "G-J13BY1D9WB"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();
        const storage = firebase.storage();

        let currentUser = null;
        let isLoginMode = true;
        let isAdmin = false;

        // Auth State Observer
        auth.onAuthStateChanged(async (user) => {
            if (user) {
                currentUser = user;
                
                // Check if this is the first user (admin)
                await checkAndSetFirstAdmin(user);
                
                // Check admin status
                await checkAdminStatus(user);
                
                showDashboard();
                loadUserProfile();
                loadFiles();
                loadUserFiles();
                updateStats();
                
                if (isAdmin) {
                    showAdminFeatures();
                }
            } else {
                currentUser = null;
                isAdmin = false;
                showWelcome();
            }
        });

        // Check and set first admin
        async function checkAndSetFirstAdmin(user) {
            try {
                const adminDoc = await db.collection('admins').doc('settings').get();
                
                if (!adminDoc.exists) {
                    // This is the first user, make them admin
                    await db.collection('admins').doc('settings').set({
                        firstAdminSet: true,
                        firstAdminId: user.uid,
                        createdAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    
                    await db.collection('admins').doc(user.uid).set({
                        email: user.email,
                        role: 'super_admin',
                        createdAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    
                    showNotification('مرحباً! أنت المدير الأول للمنصة', 'success');
                }
            } catch (error) {
                console.error('Error checking first admin:', error);
            }
        }

        // Check admin status
        async function checkAdminStatus(user) {
            try {
                const adminDoc = await db.collection('admins').doc(user.uid).get();
                isAdmin = adminDoc.exists;
            } catch (error) {
                console.error('Error checking admin status:', error);
                isAdmin = false;
            }
        }

        // Show/Hide Functions
        function showWelcome() {
            document.getElementById('welcomeSection').classList.remove('hidden');
            document.getElementById('dashboard').classList.add('hidden');
            document.getElementById('userInfo').classList.add('hidden');
            document.getElementById('authButtons').classList.remove('hidden');
        }

        function showDashboard() {
            document.getElementById('welcomeSection').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
            document.getElementById('userInfo').classList.remove('hidden');
            document.getElementById('authButtons').classList.add('hidden');
            document.getElementById('userName').textContent = currentUser.displayName || currentUser.email;
        }

        // Auth Modal Functions
        function showLogin() {
            isLoginMode = true;
            document.getElementById('authTitle').textContent = 'تسجيل الدخول';
            document.getElementById('authButtonText').textContent = 'تسجيل الدخول';
            document.getElementById('registerFields').classList.add('hidden');
            document.getElementById('switchAuth').textContent = 'ليس لديك حساب؟ إنشاء حساب جديد';
            document.getElementById('authModal').classList.remove('hidden');
        }

        function showRegister() {
            isLoginMode = false;
            document.getElementById('authTitle').textContent = 'إنشاء حساب جديد';
            document.getElementById('authButtonText').textContent = 'إنشاء الحساب';
            document.getElementById('registerFields').classList.remove('hidden');
            document.getElementById('switchAuth').textContent = 'لديك حساب بالفعل؟ تسجيل الدخول';
            document.getElementById('authModal').classList.remove('hidden');
        }

        function closeAuthModal() {
            document.getElementById('authModal').classList.add('hidden');
            document.getElementById('authForm').reset();
        }

        // Switch between login and register
        document.getElementById('switchAuth').addEventListener('click', () => {
            if (isLoginMode) {
                showRegister();
            } else {
                showLogin();
            }
        });

        // Auth Form Handler
        document.getElementById('authForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            try {
                if (isLoginMode) {
                    await auth.signInWithEmailAndPassword(email, password);
                    showNotification('تم تسجيل الدخول بنجاح!', 'success');
                } else {
                    const fullName = document.getElementById('fullName').value;
                    const university = document.getElementById('university').value;
                    const major = document.getElementById('major').value;
                    
                    const userCredential = await auth.createUserWithEmailAndPassword(email, password);
                    
                    // Update profile
                    await userCredential.user.updateProfile({
                        displayName: fullName
                    });
                    
                    // Save additional user data to regular users collection
                    await db.collection('regularUsers').doc(userCredential.user.uid).set({
                        fullName: fullName,
                        email: email,
                        university: university,
                        major: major,
                        createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                        isActive: true
                    });
                    
                    showNotification('تم إنشاء الحساب بنجاح!', 'success');
                }
                closeAuthModal();
            } catch (error) {
                showNotification('خطأ: ' + error.message, 'error');
            }
        });

        // Logout
        async function logout() {
            try {
                await auth.signOut();
                showNotification